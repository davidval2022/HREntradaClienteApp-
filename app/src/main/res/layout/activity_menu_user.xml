<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuUserActivity">


    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/menu"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:textSize="40sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ImageviewLogo"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:srcCompat="@drawable/logo" />
        <TextView
            android:id="@+id/textViewMensajeConNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Bienvenido Usuario"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="70dp"
            android:textSize="20sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnEmpleados"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:text="Empleados"
        android:onClick = "empleados"/>

    <Button
        android:id="@+id/btnEmpresas"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:onClick="empresas"
        android:text="Empresas" />

    <Button
        android:id="@+id/btnJornadas"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:onClick="jornadas"
        android:text="Jornadas" />
    <Button
        android:id="@+id/btnLogout"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="120dp"
        android:text="logout"
        android:onClick="logout"/>



</LinearLayout>